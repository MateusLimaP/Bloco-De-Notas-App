<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/bg_dark"
    android:background="@android:color/transparent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/progress_layout"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:padding="12dp"
        android:gravity="center"
        android:background="@drawable/bg_layout_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_error"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notasloadstate_error_message" />

        <Button
            android:id="@+id/button_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:padding="8dp"
            android:background="@drawable/bg_button_retry"
            android:text="@string/notasloadstate_retry" />

    </LinearLayout>


</LinearLayout>